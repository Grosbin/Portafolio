{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn portafolioDevDir.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "hooks": {
      "postdeploy": "python manage.py collectstatic --noinput"
    }
  }
}
